<style>
    .product-view {
        float: left;
        width: 50%;
        height: $00px;
        box-sizing: border-box;
        border-top: 0;
        position: relative;
        background-color:palegoldenrod;
        border-block:double;
    }


</style>



<body>

    <h1>List Of Car</h1>
    <p>
        <a asp-action="Create">Add New Record</a>
    </p>

    <div id="listView"></div>

    <script type="text/x-kendo-tmpl" id="template">
        <div class="product-view k-widget">
            <dl>
               <dt>Car No</dt>
                <dd>#:carno#</dd>
                <dt>Car Name</dt>
                <dd>#:carname#</dd>
                <dt>Manufacture Year</dt>
                <dd>#:caryear#</dd>
                <dt>Photos</dt>
                <dd><img src="data:image/jpeg;base64,#:carpic#" alt="Car Image" style:height="200px" width="200px" /></dd>

            </dl>
           
        </div>
    </script>





    <script>

        dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "/Car/GetCar",
                    dataType: "json",
                    type:"get"

                }

            },
         
            pageSize: 4,
            schema: {
                model: {
                    id: "id",
                    fields: {
                        carno: { editable: false, nullable: true },
                        carname: { type: "string" },
                        caryear: { type: "number" },
                        carpic: { type: "array" }
                    }
                }
            }
        });

        var listView = $("#listView").kendoListView({
            dataSource: dataSource,
            template: kendo.template($("#template").html()),
            //editTemplate: kendo.template($("#editTemplate").html()),
            pageable: true
        }).data("kendoListView");

        // $("#add-new-button").click(function (e) {
